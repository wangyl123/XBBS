<div class='box'>
    <div class='box-header'>
        最新加入会员
    </div>
    <div class='cell'>
        <ul class="inline user_list">
            @{
                if (ViewBag.NewUsers != null && ViewBag.NewUsers is List<XBBS.Models.User>)
                {

                    foreach (var item in ViewBag.NewUsers as List<XBBS.Models.User>)
                    {
                        <li>
                            <a href="/user/info/@item.Uid" class="profile_link" title="@item.UserName">
                                @{
                        if (string.IsNullOrEmpty(item.Avatar))
                        {
                            <img alt="@item.UserName medium avatar" class="medium_avatar" src="@item.Avatar" />
                        }
                        else
                        {
                            <img alt="@item.UserName medium avatar" class="medium_avatar" src="@Url.Content("~/uploads/avatar/default.jpg")" />
                        }

                                }

                            </a>
                        </li>
                    }
                }
            }
             
        </ul>
    </div>
</div>
