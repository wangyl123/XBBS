@{
    if (ViewBag.User != null)
    {
        <div class='box'>
            <div class='cell'>
                <table>
                    <tr>
                        <td valign='top' width='100'>
                            <a href="/user/info/@ViewBag.User.Uid" class="profile_link" title="@ViewBag.User.UserName">
                                <img alt="@ViewBag.User.UserName large avatar" class="large_avatar" src="@Url.Content("~/uploads/avatar/avatar_large.jpg")" />
                            </a>
                        </td>
                        <td valign='top' width='10'></td>
                        <td valign='left' width='auto'>
                            <div class='profile-link'><a href="/user/info/@ViewBag.User.Uid" class="startbbs profile_link" title="@ViewBag.User.UserName">@ViewBag.User.UserName</a>(@ViewData["GroupName"])</div>
                            <div class='signature'></div>
                        </td>
                    </tr>
                </table>
                <div class='sep10'></div>
                <table width='100%'>
                    <tr>
                        <td align='center' class='with_separator' width='34%'>
                            <a href="<?php echo site_url('favorites');?>" class="dark" style="display: block;">
                                <span class='bigger'>
                                    <?php echo $users['favorites']?>
                                </span>
                                <div class='sep3'></div>
                                <span class='gray'>话题收藏</span>
                            </a>
                        </td>
                        <td align='center' width='33%'>
                            <a href="<?php echo site_url('follow');?>" class="dark" style="display: block;">
                                <span class='bigger'><?php echo $users['follows']?></span>
                                <div class='sep3'></div>
                                <span class='gray'>特别关注</span>
                            </a>
                        </td>
                    </tr>

                </table>
            </div>
            @{     //查看头像是否存在啊
