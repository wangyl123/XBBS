        {
            <text> <div class='cell'>
                    <div class='text-muted alert alert-warn' style='margin-bottom: 0;'>
                        头像不够个性？
                        <a class='startbbs' href='@Url.Action("avatar","settings")'>立刻上传 →</a>
                    </div>
                </div></text>
        }
            }
            <div class='inner text-muted'>
                @{//是否存在消息
        if (false)
        {
            <img align="top" alt="Dot_orange" class="icon" src="<?php echo base_url('static/common/images/dot_orange.png');?>" />
                    <a href="<?php echo site_url('notifications');?>"><?php echo $users['notices']?> 条未读提醒</a>
        }
        else
        {
            @:暂无提醒

        }}
            </div>
        </div>

    }
    else
    {

        <div class='box'>
            <div class='cell'>
                @ViewBag.Setting["site_name"] — @ViewBag.Setting["short_intro"]
            </div>
            <div class='inner'>
                <div class='sep5'></div>
                <div class='center'>
                    @Html.ActionLink("现在注册", "reg", "user", null, new { @class = "btn btn-default" })
                    <div class='sep5'></div>
                    <div class='sep10'></div>
                    已注册用户请 @Html.ActionLink("登入", "login", "user", null, new { @class = "startbbs" })
                </div>
            </div>
        </div>

    }
}