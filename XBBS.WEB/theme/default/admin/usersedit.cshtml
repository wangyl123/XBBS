@model XBBS.Models.User
<!DOCTYPE html>
<html>
<head>
    <meta content='' name='description'>
    <meta charset='UTF-8'>
    <meta content='True' name='HandheldFriendly'>
    <meta content='width=device-width, initial-scale=1.0' name='viewport'>
    <title>运行状态 - 管理后台 - @ViewBag.Setting["site_name"]</title>
    @Html.Partial("_header-meta")
</head>
<body id="startbbs">
    @Html.Partial("_header")
    <div id="wrap">
        <div class="container" id="page-main">
            <div class="row">
                @Html.Partial("_leftbar")


                <div class='col-xs-12 col-sm-6 col-md-9'>

                    <div class='box'>
                        <div class='cell'>
                            <div class='pull-right'><a href="/Admin/Users" class="btn">返回用户管理</a></div>
                            <a href="/" class="startbbs1">XBBS</a> <span class="chevron">&nbsp;›&nbsp;</span> <a href="/Admin">管理后台</a> <span class="chevron">&nbsp;›&nbsp;</span> 修改用户信息
                        </div>
                        <font color="red">@if (TempData["result"] != null)
                                          { @TempData["result"]}</font>
                        <div class='cell'>
                            <form accept-charset="UTF-8" action="/Admin/UserEdit" class="form-horizontal" id="edit_user_1" method="post" novalidate="novalidate">
                                <div style="margin: 0; padding: 0; display: inline">
                                    <input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="put" /><input name="authenticity_token" type="hidden" value="iM/k39XK4U+GmgVT7Ps8Ko3OhPrcTBqUSu4yKYPgAjk=" />
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="UserName">用户名</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="UserName" name="UserName" size="50" type="text" value="@Model.UserName" readonly="readonly" />
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="col-sm-3 control-label" for="NickName">昵称</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="NickName" name="NickName" size="50" type="text" value="@Model.NickName"  />
                                    </div>
                                </div>

                                <div class="form-group email optional">
                                    <label class="col-sm-3 control-label" for="Email">电子邮件</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="Email" name="Email" size="50" type="email" value="@Model.Email" />
                                    </div>
                                </div>
                                <div class="form-group password optional">
                                    <label class="col-sm-3 control-label" for="Password">新密码</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="Password" name="Password" size="50" type="password" />
                                    </div>
                                </div>
                                <div class="form-group password optional">
                                    <label class="col-sm-3 control-label" for="PasswordConfirmation">确认新密码</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="PasswordConfirmation" name="PasswordConfirmation" size="50" type="password" />
                                    </div>
                                </div>
                                <div class="form-group string optional">
                                    <label class="col-sm-3 control-label" for="Homepage">个人网站</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="Homepage" name="Homepage" size="50" type="text" value="@Model.Homepage" />
                                    </div>
                                </div>
                                <div class="form-group string optional">
                                    <label class="col-sm-3 control-label" for="Location">所在地</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="Location" name="Location" size="50" type="text" value="@Model.Location" />
                                    </div>
                                </div>
                                <div class="form-group string optional">
                                    <label class="col-sm-3 control-label" for="QQ">QQ</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="QQ" name="QQ" size="50" type="text" value="@Model.QQ" />
                                    </div>
                                </div>
                                <div class="form-group string optional">
                                    <label class="col-sm-3 control-label" for="Signature">签名</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="Signature" name="Signature" size="50" type="text" value="@Model.Signature" />
                                    </div>
                                </div>
                                <div class="form-group text optional">
                                    <label class="col-sm-3 control-label" for="Introduction">个人简介</label>
                                    <div class="col-sm-5">
                                        <textarea class="form-control" cols="40" id="Introduction" name="Introduction" rows="5">@Model.Introduction</textarea>
                                    </div>
                                </div>
                                <input id="Uid" name="Uid" type="hidden" value="@Model.Uid" />
                                <div class="form-group integer optional">
                                    <label class="col-sm-3 control-label" for="Money">银币</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="Money" name="Money" step="1" type="number" value="@Model.Money" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="user_group">用户组</label>
                                    <div class="col-sm-5">
                                        <select name="GId" id="GId" class="form-control">
                                            @foreach (var item in (ViewData["list"] as List<XBBS.Models.UserGroup>))
                                            {
		 
                                                <text><option value="@item.GId" @if(@item.GId==@Model.Gid){ <text>selected="selected"</text> }>@item.GroupName</option></text>
                                            }

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="submit" class="btn btn-primary">更新用户信息</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_footer")
</body>
</html>
